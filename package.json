{
  "version": "0.1.4",
  "description": "A package that helps with the management and expansion of a maintainable firebase backend",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/firebase-backend.esm.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://github.com/filledstacks/firebase-backend#readme",
  "repository": "git://github.com/filledstacks/firebase-backend.git",
  "bugs": {
    "url": "git+https://github.com/filledstacks/firebase-backend/issues"
  },
  "author": "FilledStacks <dane@filledstacks.com>",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src/**/*.ts --cache",
    "lint:fix": "eslint src/**/*.ts --fix --cache",
    "format": "prettier 'src/**/*.ts' --write",
    "predocs": "rimraf docs",
    "docs": "typedoc src/index.ts"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-functions": "^3.13.2",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.33",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "endOfLine": "lf"
  }
}
