{
  "name": "firebase-backend",
  "version": "0.1.5",
  "description": "A package that helps with the management and expansion of a maintainable firebase backend",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/firebase-backend.esm.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://github.com/filledstacks/firebase-backend#readme",
  "repository": "git://github.com/filledstacks/firebase-backend.git",
  "bugs": {
    "url": "git+https://github.com/filledstacks/firebase-backend/issues"
  },
  "author": "FilledStacks <dane@filledstacks.com>",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test --passWithNoTests",
    "lint": "eslint src/**/*.ts --cache",
    "lint:fix": "eslint src/**/*.ts --fix --cache",
    "format": "prettier 'src/**/*.ts' --write",
    "predocs": "rimraf docs",
    "docs": "typedoc src/index.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-functions": "^3.13.2",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
