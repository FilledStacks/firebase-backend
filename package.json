{
  "name": "firebase-backend",
  "version": "0.1.3",
  "description": "A package that helps with the management and expansion of a maintainable firebase backend",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/firebase-backend.esm.js",
  "typings": "dist/index.d.ts",
  "homepage": "https://github.com/filledstacks/firebase-backend#readme",
  "repository": "git://github.com/filledstacks/firebase-backend.git",
  "bugs": {
    "url": "git+https://github.com/filledstacks/firebase-backend/issues"
  },
  "author": "FilledStacks <dane@filledstacks.com>",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --target node",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src",
    "lint:fix": "tsdx lint src --fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "auto shipit",
    "format": "prettier 'src/**/*.ts' --write"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "firebase-functions": "^3.13.2",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "auto": "^10.22.0",
    "cosmiconfig": "^7.0.0",
    "eslint": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "firebase-admin": "^9.5.0",
    "husky": "^5.2.0",
    "prettier": "^2.2.1",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "size-limit": [
    {
      "path": "dist/firebase-backend.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firebase-backend.esm.js",
      "limit": "10 KB"
    }
  ],
  "auto": {
    "plugins": [
      "npm"
    ],
    "onlyPublishWithReleaseLabel": true,
    "baseBranch": "main"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  }
}
